#!/usr/bin/env bash
# This script creates an RSA key pair with specific requirements

# Usage: ./1-create_ssh_key_pair

# Specify the key name and number of bits
KEY_NAME="school"
BITS=4096

# Create an RSA key pair with passphrase "betty"
ssh-keygen -t rsa -b $BITS -C "Generated by script" -f "$KEY_NAME" -N "betty"

# Display information about the generated key pair
echo "Generated public/private rsa key pair."
ls -l "$KEY_NAME"*
